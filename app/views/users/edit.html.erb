<%= form_with model: @user do |form| %>
    <%= form.label "Username: " %>
    <%= form.text_field :username %><br><br>
    <%= form.label "Email: " %>
    <%= form.text_field :email %><br><br>
    <%= form.label "Password: " %>
    <%= form.password_field :password %><br><br>
    <%= submit_tag("Update") %>
<% end %>